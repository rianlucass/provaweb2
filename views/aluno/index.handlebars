<div class="container mt-5">
    <div class="card shadow-lg p-4">
        <h2 class="text-center mb-4">Notas dos alunos</h2>

        <table class="table table-striped table-hover">
            <thead class="table-success">
                <tr>
                    <th>#</th>
                    <th>Nome</th>
                    <th>E-mail</th>
                    <th>Telefone</th>
                    <th>Situação</th>
                </tr>
            </thead>
            <tbody>
                {{#each alunos}}
                <tr>
                    <td>{{id}}</td>
                    <td>{{nome}}</td>
                    <td>{{email}}</td>
                    <td>{{telefone}}</td>
                    <td>{{situacao}}</td>
                </tr>
                {{/each}}
            </tbody>
        </table>

        <div class="text-center mt-3">
            <a href="/aluno/cadastrar" class="btn btn-success">Adicionar Nota</a>
        </div>
    </div>
</div>
